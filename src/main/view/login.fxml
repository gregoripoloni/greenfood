        <Label fx:id="myLabel" text="Entre ou Cadastre-se">
         <font>
            <Font size="24.0" />
         </font>
      </Label>
      <VBox prefHeight="200.0" prefWidth="100.0">
         <children>
            <Label prefHeight="17.0" prefWidth="328.0" text="E-mail" />
            <TextField fx:id="email" promptText="Digite seu e-mail" />
         </children>
      </VBox>
      <VBox prefHeight="200.0" prefWidth="100.0">
         <children>
            <Label prefHeight="17.0" prefWidth="328.0" text="Senha" />
            <PasswordField fx:id="senha" promptText="Digite sua senha" />
         </children>
      </VBox>
      <Label fx:id="erro" textFill="RED" />
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="10.0">
         <children>
            <Button mnemonicParsing="false" onAction="#entrar" text="Entrar" />
            <Button mnemonicParsing="false" text="NÃ£o tem conta ainda? Cadastre-se" />
         </children>
      </VBox>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
