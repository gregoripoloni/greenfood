<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400" prefWidth="600" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.controller.RelatorioController">
    <children>
        <Label layoutX="180" layoutY="20" text="Relatório de Doações por Mês">
            <font><Font size="20.0" /></font>
        </Label>
        <TableView fx:id="tabelaDoacoes" layoutX="30.0" layoutY="70.0" prefHeight="280.0" prefWidth="540.0">
          <columns>
              <TableColumn fx:id="colMes" prefWidth="180" text="Mês" />
              <TableColumn fx:id="colQuantidade" prefWidth="180" text="Quantidade" />
          </columns>
        </TableView>
        <Button fx:id="botaoFechar" layoutX="250" layoutY="360" onAction="#fecharJanela" prefWidth="100" text="Fechar" />
    </children>
</AnchorPane>
